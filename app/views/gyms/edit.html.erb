<h2>Edit this piece of equipment.</h2>

<%= form_tag "/gyms/#{@gym.id}", method: :patch do %>
  <div>
    <%= label_tag :equipment_type %>
    <%= text_field_tag :equipment_type, @gym.equipment_type %>
  </div>
  <div>
    <%= label_tag :description %>
    <%= text_field_tag :description, @gym.description %>
  </div>
  <div>
    <%= label_tag :good_for %>
    <%= text_field_tag :good_for, @gym.good_for %>
  </div>
  <div>
    <%= submit_tag "Edit Equipment" %>
  </div>

  <% end %>